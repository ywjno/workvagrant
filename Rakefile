require 'rubygems'

desc "vagrant up"
task :up do
  system "vagrant up"
end

desc "vagrant halt"
task :down do
  system "vagrant halt"
end

desc "vagrant reload"
task :reload do
  system "vagrant reload"
end

desc "install all chef"
task :install_chef do
  system "librarian-chef install"
end

desc "update all chef"
task :update_chef do
  system "librarian-chef update"
end
